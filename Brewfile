# ╭──────────────────────────────────────────────────────────╮
# │ Python                                                   │
# ╰──────────────────────────────────────────────────────────╯
brew 'pyenv'
brew 'pyenv-virtualenv'

# ╭──────────────────────────────────────────────────────────╮
# │ Ruby                                                     │
# ╰──────────────────────────────────────────────────────────╯
brew 'openssl'
brew 'rbenv'
brew 'ruby-build'

# ╭──────────────────────────────────────────────────────────╮
# │ Backups                                                  │
# ╰──────────────────────────────────────────────────────────╯
brew 'restic' if OS.mac? && !is_stripe

# ╭──────────────────────────────────────────────────────────╮
# │ Neovim                                                   │
# ╰──────────────────────────────────────────────────────────╯
brew 'bat'
