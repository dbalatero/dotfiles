brew 'wget'
brew 'xz'

# ╭──────────────────────────────────────────────────────────╮
# │ Fonts                                                    │
# ╰──────────────────────────────────────────────────────────╯
if OS.mac?
  # cask "font-jetbrains-mono-nerd-font"
  cask 'font-inconsolata-go-nerd-font'
end

# ╭──────────────────────────────────────────────────────────╮
# │ Hammerspoon                                              │
# ╰──────────────────────────────────────────────────────────╯
if OS.mac?
  cask 'Hammerspoon'
  brew 'blueutil'
  brew 'm1ddc' unless is_stripe
end

# ╭──────────────────────────────────────────────────────────╮
# │ Git                                                      │
# ╰──────────────────────────────────────────────────────────╯
brew 'diff-so-fancy'
brew 'gh' if OS.mac?
