# frozen_string_literal: true

is_stripe = Dir.exist?('/Applications/Santa.app')

# ╭──────────────────────────────────────────────────────────╮
# │ Terminal                                                 │
# ╰──────────────────────────────────────────────────────────╯
cask 'alacritty' if OS.mac? && !is_stripe

# ╭──────────────────────────────────────────────────────────╮
# │ Core                                                     │
# ╰──────────────────────────────────────────────────────────╯
brew 'fd'
brew 'imagemagick' if OS.mac?
